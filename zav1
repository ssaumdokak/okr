<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Image Gallery</title>
  <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
  <style>
    /* Галерея стилі */
    #gallery img {
      width: 150px;
      margin: 10px;
      cursor: pointer;
    }

    /* Модальне вікно */
    .modal {
      display: none;
      position: fixed;
      z-index: 1;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.9);
    }

    .modal-content {
      margin: auto;
      display: block;
      max-width: 80%;
    }

    #caption {
      text-align: center;
      color: white;
      padding: 10px;
    }

    .close {
      position: absolute;
      top: 10px;
      right: 25px;
      color: white;
      font-size: 35px;
      cursor: pointer;
    }

    /* Swiper стилі */
    .swiper-container {
      width: 80%;
      height: 500px;
      margin: 20px auto;
    }

    .swiper-slide img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  </style>
</head>
<body>

  <!-- Галерея зображень -->
  <div id="gallery"></div>

  <!-- Модальне вікно -->
  <div id="modal" class="modal">
    <span class="close">&times;</span>
    <img id="modal-image" class="modal-content">
    <div id="caption"></div>
  </div>

  <!-- Слайдер зображень -->
  <div class="swiper-container">
    <div class="swiper-wrapper" id="swiper-wrapper">
      <!-- Слайди будуть додані динамічно через JavaScript -->
    </div>
    <!-- Пагінація -->
    <div class="swiper-pagination"></div>
    <!-- Кнопки навігації -->
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
  </div>

  <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
  <script>
    // Масив зображень
    const images = [
      {
        title: "Sunset",
        url: "https://example.com/sunset.jpg",
        description: "A beautiful sunset."
      },
      {
        title: "Mountain",
        url: "https://example.com/mountain.jpg",
        description: "Snow-covered mountains."
      },
      {
        title: "Forest",
        url: "https://example.com/forest.jpg",
        description: "A peaceful forest."
      }
    ];

    // Галерея
    const gallery = document.getElementById("gallery");

    // Модальне вікно
    const modal = document.getElementById("modal");
    const modalImage = document.getElementById("modal-image");
    const caption = document.getElementById("caption");
    const closeModal = document.getElementsByClassName("close")[0];

    // Створення галереї
    images.forEach((image, index) => {
      const img = document.createElement("img");
      img.src = image.url;
      img.alt = image.title;
      img.addEventListener("click", () => {
        modal.style.display = "block";
        modalImage.src = image.url;
        caption.textContent = image.description;
      });
      gallery.appendChild(img);

      // Додати зображення до слайдера
      const slide = document.createElement("div");
      slide.classList.add("swiper-slide");
      const slideImage = document.createElement("img");
      slideImage.src = image.url;
      slide.appendChild(slideImage);
      document.getElementById("swiper-wrapper").appendChild(slide);
    });

    // Закриття модального вікна
    closeModal.onclick = function() {
      modal.style.display = "none";
    };

    // Закриття модального вікна при кліку поза зображенням
    window.onclick = function(event) {
      if (event.target === modal) {
        modal.style.display = "none";
      }
    };

    // Ініціалізація Swiper.js
    const swiper = new Swiper('.swiper-container', {
      effect: 'fade', // Інші ефекти: 'slide', 'zoom'
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      loop: true,
    });
  </script>
</body>
</html>
